{
  "extends": "@strapi/typescript-utils/tsconfigs/admin",

  "compilerOptions": {
    "target": "ESNext",
    "strict": true,
    "jsx": "react"
  },

  "include": [
    "admin",
    "custom.d.ts",
    "./",
    "./**/*.ts",
    "./**/*.js",
    "**/*.tsx",
    "src/**/*.json"
  ],

  "exclude": [
    "node_modules/",
    "dist/",

    // Do not include server files in the server compilation
    "server/",
    // Do not include test files
    "**/*.test.ts"
  ]
}
